/*package whatever //do not write package name here */

import java.io.*;
import java.util.*;
class GFG {
	public static void main (String[] args) {
	String str="()(()))))";
	
	int n=str.length();
	
	Stack<Integer> st=new Stack<>();
	
	st.push(-1);
	int ans=0;
	
	for(int i=0;i<n;i++){
	    if(str.charAt(i)=='('){
	        st.push(i);
	    }
	    else{
	        if(!st.isEmpty()){
	            st.pop();
	        }
	        if(!st.isEmpty()){
	            ans=Math.max(ans,i-st.peek());
	        }
	        else{
	            st.push(i);
	        }
	    }
	}
	
	System.out.println(ans);
	
	
	}
}
